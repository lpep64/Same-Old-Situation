<mujoco model="robot_arm_manipulation">
  <compiler angle="degree"/>
  <option timestep="0.01"/>
  <default>
    <geom contype="1" conaffinity="1" friction="0.5 0.1 0.1" rgba="0.8 0.6 0.4 1"/>
  </default>
  <worldbody>
    <geom name="table" type="box" pos="0 0 0" size="1 1 0.1" rgba="0.5 0.3 0.1 1"/>
    <body name="robot" pos="0 0 0.1">
      <!-- Changed base_joint from 'free' to 'slide' along the x-axis -->
      <joint name="base_joint" type="slide" axis="1 0 0" range="-1 1"/>
      <geom name="arm" type="capsule" fromto="0 0 0 0 0 0.5" size="0.05"/>
      <body name="gripper" pos="0 0 0.5">
        <joint name="gripper_joint" type="slide" axis="0 1 0" range="0 0.1"/>
        <geom name="finger1" type="box" pos="0.05 0 0" size="0.02 0.05 0.1"/>
        <geom name="finger2" type="box" pos="-0.05 0 0" size="0.02 0.05 0.1"/>
      </body>
    </body>
    <geom name="target_box" type="box" pos="0.8 0 0.05" size="0.1 0.1 0.05" rgba="0 1 0 1"/>
    <body name="circle_block" pos="-0.5 0.5 0.1">
      <joint name="circle_free" type="free"/>
      <geom name="circle_geom" type="sphere" size="0.05" rgba="0 0 1 1"/>
    </body>
    <body name="x_block" pos="-0.5 -0.5 0.1">
      <joint name="x_free" type="free"/>
      <geom name="x_geom" type="box" size="0.05 0.05 0.05" rgba="1 0 0 1"/>
    </body>
  </worldbody>
  <!-- Actuator definitions for the base and gripper -->
  <actuator>
    <position name="base_act" joint="base_joint" gear="100"/>
    <position name="gripper_act" joint="gripper_joint" gear="100"/>
  </actuator>
</mujoco>