<mujoco model="fr3 scene">
  <include file="fr3.xml"/>

  <statistic center="0.2 0 0.4" extent=".8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="table_mat" rgba="0.5 0.3 0.1 1"/>
    <material name="conveyor_mat" rgba="0.2 0.2 0.2 1"/>
    <material name="circle_mat" rgba="0 1 0 1"/>
    <material name="x_mat" rgba="1 0 0 1"/>
    <material name="triangle_mat" rgba="0 0 1 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- Table -->
    <body name="table" pos="0 0 0">
      <geom name="table_top" type="box" size="0.8 0.8 0.02" pos="0 0 0.50" material="table_mat"/>
      <!-- Optional table legs -->
      <geom name="leg1" type="cylinder" size="0.04 0.25" pos="0.7 0.7 0.27" material="table_mat"/>
      <geom name="leg2" type="cylinder" size="0.04 0.25" pos="-0.7 0.7 0.27" material="table_mat"/>
      <geom name="leg3" type="cylinder" size="0.04 0.25" pos="0.7 -0.7 0.27" material="table_mat"/>
      <geom name="leg4" type="cylinder" size="0.04 0.25" pos="-0.7 -0.7 0.27" material="table_mat"/>
      
      <!-- Conveyor belt - aligned with table -->
      <body name="conveyor" pos="0 0 0.52">  <!-- Just above table surface -->
        <geom name="belt" type="box" size="0.6 0.15 0.02" material="conveyor_mat"/>
        <joint name="conveyor_joint" type="slide" axis="1 0 0" pos="0 0 0" limited="false"/>
        
        <!-- Moving blocks - on conveyor surface -->
        <body name="circle_block" pos="-0.4 0 0.03">
          <joint name="circle_joint" type="slide" axis="1 0 0" limited="false"/>
          <geom name="circle_geom" type="sphere" size="0.03" material="circle_mat"/>
        </body>
        
        <body name="x_block" pos="-0.2 0 0.03">
          <joint name="x_joint" type="slide" axis="1 0 0" limited="false"/>
          <geom name="x_geom" type="box" size="0.03 0.03 0.03" material="x_mat"/>
        </body>
        
        <body name="triangle_block" pos="0 0 0.03">
          <joint name="triangle_joint" type="slide" axis="1 0 0" limited="false"/>
          <geom name="triangle_geom" type="ellipsoid" size="0.03 0.03 0.03" material="triangle_mat"/>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <velocity name="conveyor_velocity" joint="conveyor_joint" kv="100" gear="1"/>
  </actuator>
</mujoco>