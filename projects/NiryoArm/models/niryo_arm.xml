
    <mujoco model="niryo_ned2_minimal">
      <compiler angle="radian" meshdir="meshes/"/>
      
      <option timestep="0.002" integrator="RK4"/>
      
      <asset>
        <material name="joint_material" rgba="0.2 0.2 0.2 1"/>
        <material name="link_material" rgba="0.7 0.7 0.7 1"/>
      </asset>
      
      <worldbody>
        <!-- Base -->
        <body name="base_link" pos="0 0 0">
          <geom name="base" type="cylinder" size="0.06 0.03" rgba="0.3 0.3 0.3 1"/>
          
          <!-- Joint 1 (Base rotation) -->
          <body name="shoulder_link" pos="0 0 0.05">
            <joint name="joint_1" type="hinge" axis="0 0 1" range="-2.97 2.97"/>
            <geom name="shoulder" type="cylinder" size="0.04 0.08" rgba="0.6 0.6 0.6 1"/>
            
            <!-- Joint 2 (Shoulder) -->
            <body name="arm_link" pos="0 0 0.08" euler="1.57 0 0">
              <joint name="joint_2" type="hinge" axis="0 0 1" range="-1.57 0.64"/>
              <geom name="arm" type="box" size="0.03 0.15 0.03" rgba="0.5 0.5 0.5 1"/>
              
              <!-- Joint 3 (Elbow) -->
              <body name="forearm_link" pos="0 0.15 0" euler="0 0 0">
                <joint name="joint_3" type="hinge" axis="0 0 1" range="-1.4 1.4"/>
                <geom name="forearm" type="box" size="0.025 0.12 0.025" rgba="0.4 0.4 0.4 1"/>
                
                <!-- Joint 4 (Wrist 1) -->
                <body name="wrist_link" pos="0 0.12 0" euler="1.57 0 0">
                  <joint name="joint_4" type="hinge" axis="0 0 1" range="-2.0 2.0"/>
                  <geom name="wrist" type="cylinder" size="0.02 0.04" rgba="0.3 0.3 0.3 1"/>
                  
                  <!-- Joint 5 (Wrist 2) -->
                  <body name="wrist2_link" pos="0 0 0.04" euler="-1.57 0 0">
                    <joint name="joint_5" type="hinge" axis="0 0 1" range="-1.7 1.7"/>
                    <geom name="wrist2" type="cylinder" size="0.015 0.03" rgba="0.2 0.2 0.2 1"/>
                    
                    <!-- Joint 6 (Wrist 3) -->
                    <body name="hand_link" pos="0 0.03 0" euler="1.57 0 0">
                      <joint name="joint_6" type="hinge" axis="0 0 1" range="-2.57 2.57"/>
                      <geom name="hand" type="cylinder" size="0.01 0.02" rgba="0.1 0.1 0.1 1"/>
                      
                      <!-- End effector site -->
                      <site name="end_effector" pos="0 0 0.02" size="0.01"/>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
        
        <!-- Ground plane -->
        <geom name="floor" pos="0 0 -0.05" size="1 1 0.02" type="box" rgba="0.8 0.8 0.8 1"/>
      </worldbody>
      
      <actuator>
        <motor name="motor_1" joint="joint_1" gear="1"/>
        <motor name="motor_2" joint="joint_2" gear="1"/>
        <motor name="motor_3" joint="joint_3" gear="1"/>
        <motor name="motor_4" joint="joint_4" gear="1"/>
        <motor name="motor_5" joint="joint_5" gear="1"/>
        <motor name="motor_6" joint="joint_6" gear="1"/>
      </actuator>
    </mujoco>
    